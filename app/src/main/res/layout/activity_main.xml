<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Bem Vindo ao Bulars!"
            android:id="@+id/recognizedTextView"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/exampleImageView" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/searchFileButton"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="225dp" tools:srcCompat="@drawable/bulicon"
            android:id="@+id/exampleImageView"
            app:layout_constraintBottom_toTopOf="@+id/recognizedTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp"
            app:srcCompat="@drawable/bulicon" android:visibility="visible"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarSearch" android:layout_marginBottom="60dp"/>
    <Button
            android:text="Galeria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchFileButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recognizedTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="177dp"
    />
    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarSearch"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <SearchView
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@+id/toolbarSearch"
            app:layout_constraintBottom_toBottomOf="@+id/toolbarSearch"
            app:layout_constraintStart_toStartOf="@+id/toolbarSearch" android:layout_marginStart="120dp"
            android:id="@+id/searchTextBar"/>
    <Button
            android:text="CÃ¢mera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cameraButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/recognizedTextView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchFileButton" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>